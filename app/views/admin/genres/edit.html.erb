<% if @genre.errors.any? %>
  <div>
   <%= flash[:danger] %>
  </div>
<% end %>

<div class="container my-5">
  <div class="row">
    <h2>ジャンル編集</h2>
  </div>

  <p></p>

  <div class="row">
    <p>ジャンル名　</p>
    <%= form_with model: @genre, url: admin_genre_path, local: true do |genre| %>
      <%= genre.text_field :name %>
      <%= genre.submit '変更を保存', class: "btn btn-info bn-lg rounded-pill" %>
    <% end %>
  </div>
</div>
