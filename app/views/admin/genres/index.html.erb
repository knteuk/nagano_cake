  <%end%>

  <table class="table table-bordere">
    <thead>
	  <tr>
	    <th>ジャンル</th>
		  <!--<th>状態</th>-->
		  <!--<th>&nbsp;</th>-->
	  </tr>
	</thead>
	<tbody>
	  <% @genres.each do |genre| %>
	    <tr>
		  <td><%= genre.name %></td>
		  <td>
		    <!--<%# if genre.is_enabled == true %>-->
	  		<!--有効-->
			<!--<%# else %>-->
	   		<!--無効-->
	 		<!--<%# end %>-->
	 	  </td>
		  <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
		</tr>
	  <% end %>
	</tbody>
  </table>
</div>