<div class="container my-5">
  <div class="row">
	<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  </div>

  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <div class="col-xs-5">
      <div class="field">
        <strong><%= f.label :会員ID　%></strong><%= @customer.id %>
      </div>
      <div class="field">
      	<strong><%= f.label :名前 %></strong><br>
		<%= f.label :（姓） %>
		<%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
		<%= f.label :（名） %>
		<%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :フリガナ %></strong><br>
		<%= f.label :（セイ） %>
		<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
		<%= f.label :（メイ） %>
		<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :郵便番号（ハイフンなし） %></strong><br>
		<%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :住所 %></strong><br>
		<%= f.text_field :address, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :電話番号（ハイフンなし） %></strong><br>
		<%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :メールアドレス %></strong><br>
		<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="field">
		<strong><%= f.label :会員ステータス %></strong><br>
	    <% if @customer.is_active == true %>
		  <label><%= f.radio_button :is_active, {value: ""}, {checked: true} %>有効</label>
		  <label><%= f.radio_button :is_active, value: Time.now %>退会</label>
		<% else %>
		  <label><%= f.radio_button :is_active,  value: "" %>有効</label>
	      <label><%= f.radio_button :is_active, {value: Time.now}, {checked: true} %>退会</label>
		<% end %>
	  </div>
	  <%= f.submit "編集内容を保存する", class: "btn btn-info btn-lg rounded-pill"%>
	</div>
  <% end %>
</div>
