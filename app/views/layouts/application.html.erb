<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style = "background: #D2B48C;">
   <body class="d-flex flex-column vh-100">
    <header class="text-white pt-0 pb-0", style="background-color: #432c28;">
      <nav class="navbar navbar-expand-lg navbar-dark bg: white">
        <div class="container">
          <a class="navbar-brand p-6" href="/"><%= "NAGANO CAKE" %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <span class="text-white strong nav-link" >
                      ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
                    </span>
                  </li>
                  <li class="nav-item">
                    <%= link_to "マイページ", customers_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "商品一覧", items_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "カート", cart_items_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
                  </li>
                </ul>
              <% elsif admin_signed_in? %>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
                  </li>
              <% else %>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <span class="text-white strong nav-link" >
                      ようこそ！ゲストさん
                    </span>
                  </li>
                  <li class="nav-item">
                    <%= link_to "About", about_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "商品一覧", items_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
                  </li>
                </ul>
              <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer class="text-white h-20", style="background-color: #432c28;">
        <div class="row">
          <div class="mx-auto">
            <p>© 2022 Kana Kawamura</p>
          </div>
        </div>
    </footer>
  </body>
</html>
