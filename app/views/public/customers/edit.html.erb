<div class="container my-5">
  <div class="row">
    <h2 class="red-border px-3">会員情報編集</h2>
  </div>

  <div class="row my-3">
    <div class="offset-3 col-6">
      <%= form_with model: @customer, url: customers_edit_path, method: :patch, local: true do |f| %>
        <table class="table table-striped">
          <div class="form-group">
            <%= f.label :名前, class: "brown-border px-3" %>
            <div class="row">
              <%= f.text_field :last_name, placeholder:"姓 例）河村", class: "form-control offset-1 col-5" %>
              <%= f.text_field :first_name, placeholder:"名 例）佳奈", class: "form-control offset-1 col-5" %>
            </div>
            <div class="row">
              <%= f.text_field :last_name_kana, placeholder:"セイ 例）カワムラ", class: "form-control offset-1 col-5" %>
              <%= f.text_field :first_name_kana, placeholder:"メイ 例）カナ", class: "form-control offset-1 col-5" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :"郵便番号(ハイフンなし)", class: "brown-border px-3" %>
            <%= f.text_field :postal_code, class: "form-control offset-1 col-11" %>
          </div>
          <div class="form-group">
            <%= f.label :住所, class: "brown-border px-3" %>
            <%= f.text_field :address, class: "form-control offset-1 col-11" %>
          </div>
          <div class="form-group">
            <%= f.label :"電話番号(ハイフンなし)", class: "brown-border px-3" %>
            <%= f.text_field :telephone_number, class: "form-control offset-1 col-11" %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス, class: "brown-border px-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）example@mail", class: "form-control offset-1 col-11" %>
          </div>
          <div class="row">
            <div class="mx-auto">
              <%= f.submit "編集内容を保存", class: "btn btn-info rounded-pill" %>
            </div>
            <div class="mx-auto">
              <%= link_to "退会する", customers_quit_path, class: "btn btn-danger rounded-pill" %>
            </div>
          </div>
        </table>
      <% end %>
    </div>
  </div>
</div>
