<div class="container my-5">
	<div class="row">
		<h2 class="red-border px-3 pb-1">配送先登録・一覧</h2>
  </div>
	</div>

	<div class="row my-3">
    <div class="offset-2 col-3">
      <div class="row my-3">
        <%= form_with model: @address, url: addresses_path, local: true do |f| %>
          <div class="form-group row">
            <%= f.label :郵便番号（ハイフンなし） %>
            <%= f.text_field :postal_code, class: "form-control", placeholder: "6731111" %>
          </div>

          <div class="form-group row">
            <%= f.label :住所 %>
            <%= f.text_field :address, class: "form-control", placeholder: "滋賀県草津市1-1" %>
          </div>

          <div class="form-group row">
            <%= f.label :宛名 %>
            <%= f.text_field :name, class: "form-control col-6", placeholder: "河村佳奈" %>
          </div>

          <div class="row">
            <%= f.submit "新規登録", class: "btn btn-light rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="offset-1 col-6">
    <table class="table table-bordered">
      <thead>
        <tr class="red-border">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        <tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
          <tr class="brown-border">
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address),  class: "btn btn-info rounded-pill" %>
              <%= link_to "削除する", address_path(address), method: :delete ,data: { confirm: '配送先を削除しますか？' }, class: "btn btn-danger rounded-pill" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
