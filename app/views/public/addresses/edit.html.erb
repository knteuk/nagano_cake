<div class="container my-5">
	<div class="row">
		<div class="offset-1">
			<h2 class="red-border px-3 pb-1">配送先編集</h2>
		</div>
	</div>

  <div class="row mt-3">
    <div class="offset-4 col-4">
    	<%= form_with model: @address, url: edit_address_path, local: true do |f| %>
    	  <div class="form-group">
    	  	<%= f.label :"郵便番号", class: "brown-border px-3 pb-1" %>
    	  	<%= f.text_field :postal_code, class: "form-control offset-1 col-10" %>
    	  </div>
    	  <div class="form-group">
    	  	<%= f.label :"住所", class: "brown-border px-3 pb-1" %>
    	  	<%= f.text_field :address, class: "form-control offset-1 col-10" %>
    	  </div>
    	  <div class="form-group">
    	  	<%= f.label :"宛名", class: "brown-border px-3 pb-1" %>
    	  	<%= f.text_field :name, class: "form-control offset-1 col-5" %>
		    </div>
		    <div class="row">
		    	<%= f.submit "変更内容を保存", class: "btn btn-info rounded-pill" %>
		    </div>
		  <% end %>
  </div>
</div>
