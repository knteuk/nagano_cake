<div class="container my-5">
  <div class="row">
    <h2>商品一覧</h2>
      <!--<%#= render 'genre_search', genres: @genres %>-->
  </div>

  <div class="col-10">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 mt-3">
          <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, size: "150x150", fallback: "no_image.png", class: 'rounded' %>
          <% end %><br>
            <strong class="red-border"><%= item.name %></strong><br>
            <span class="ml-auto"><%= (item.price * 1.1).to_i.to_s(:delimited) %>円</span><br>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>
