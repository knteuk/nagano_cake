<div class="container my-5">
  <div class="row">
    <div class="offset-3">
      <%#= render 'genre_search', genres: @genres %>
    </div>

    <div class="row">
    	<div class="col-xs-4">
        <%= attachment_image_tag @item, :image, size: '250x250', fallback: 'no_image.png', size: '300x300', class: "rounded" %>
      </div>

      <div class="col-xs-8">
        <div class="table">
          <div>
            <h4 class="red-border px-4 pb-1"><%= @item.name %></h4>
          </div>

          <div class="row mt-3">
            <p class="ml-5"><%= @item.introduction %></p>
          </div>

          <div class="row">
            <strong class="red-border px-3 ml-auto"><%= (@item.price * 1.1).to_i.to_s(:delimited) %>円 (税込)</strong>
          </div>
        </div>

        <div class="row">
          <div class="offset-6">
            <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
              <%= f.select :amount, *[1..10] %><span>個</span>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit "カートに入れる", class: "btn btn-info rounded-pill" %>
          　<% end %>
          </div>

          <div class="row">
            <%#= flash[:into_cart_error] %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>